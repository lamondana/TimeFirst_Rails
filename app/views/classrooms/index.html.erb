<%= link_to "back", request.referer.present? ? request.referer : classrooms_path %>
<h1>Classrooms</h1>

<h3><%= Time.now.strftime("%A, %d/%m/%Y") %></h3>
  <table>
  <% @classrooms.each do |classroom| %>
  <tr>
    <td><%= classroom.classroom_name %></td>

  <td>
    <%= link_to("Show", classroom_path(classroom), :class => 'action show') %>
    <%= link_to("Register", edit_classroom_path(classroom), :class => 'action edit') %>
    <%= link_to("Update", classroom_path(classroom), :class => 'action update', :method => :update) %>

  </td>
</tr>
<%end%>

</table>
